#ifndef SIMPLEKERNEL_SRC_LIBCXX_INCLUDE_SK_UNIQUE_PTR_
#define SIMPLEKERNEL_SRC_LIBCXX_INCLUDE_SK_UNIQUE_PTR_

#include "kstd_unique_ptr"

namespace sk_std {
template <typename T, typename Deleter = kstd::default_delete<T>>
using unique_ptr = kstd::unique_ptr<T, Deleter>;

template <typename T, typename... Args>
auto make_unique(Args&&... args) -> unique_ptr<T> {
  return kstd::make_unique<T>(static_cast<Args&&>(args)...);
}
}  // namespace sk_std

#endif /* SIMPLEKERNEL_SRC_LIBCXX_INCLUDE_SK_UNIQUE_PTR_ */
